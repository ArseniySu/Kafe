<Window x:Class="Kafe.StCookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafe"
        mc:Ignorable="d"
        Title="Статус" Height="450" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="50">
        <TextBlock Text="Номе Заказа"/>
        <TextBlock Name="NumberOrderTBox" Margin="72,0,0,0" />
        <TextBlock Text="Блюдо"/>
        <TextBlock Name ="DishTBox" Margin="72,0,0,0"/>

        <TextBlock Text="Стоимость"/>
        <TextBlock Name ="PriseTBox" Margin="72,0,0,0"/>

        <TextBlock Text="Время приготовления"/>
        <TextBlock Name ="TimeTBox" Margin="72,0,0,0"/>

        <TextBlock Text="Статус оплаты"/>
        <TextBlock Name ="StTBox" Margin="72,0,0,0"/>

        <TextBlock Text="Статус готовности"/>
        <ComboBox Name="StCookCbox" DisplayMemberPath="StCook" SelectedValuePath="IdStCook"/>
        <Button Content="Сохранить" Name="editBtn" Click="editBtn_Click"/>
        <Button Content="Назад" Name="BackBtn" Click="BackBtn_Click"/>
    </StackPanel>
</Window>
