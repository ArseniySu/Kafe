<Window x:Class="Kafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="50">
        <TextBlock Text="Номе Заказа"/>
        <TextBlock Name="NumberTBox" Margin="72,0,0,0" />
        <TextBlock Text="Блюдо"/>
        <TextBlock Name ="DishTBox1" Margin="72,0,0,0"/>

        <TextBlock Text="Стоимость"/>
        <TextBlock Name ="PriseTBox1" Margin="72,0,0,0"/>

        <TextBlock Text="Время приготовления"/>
        <TextBlock Name ="TimeTBox1" Margin="72,0,0,0"/>

        <TextBlock Text="Статус оплаты"/>
        <ComboBox Name="StWaiteCbox" DisplayMemberPath="Status" SelectedValuePath="IdStatus"/>

        <TextBlock Text="Статус готовности"/>
        <TextBlock Name ="StCook" Margin="72,0,0,0"/>

        <Button Content="Сохранить" Name="editBtn1" Click="editBtn1_Click"/>
        <Button Content="Назад" Name="BackBtn1" Click="BackBtn1_Click"/>
    </StackPanel>
</Window>
